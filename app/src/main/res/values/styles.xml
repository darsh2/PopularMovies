<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--http://stackoverflow.com/questions/31425427/appcompat-v22-set-default-textcolor-for-textview/31460431#31460431-->
        <item name="android:textColorTertiary">@color/black</item>
    </style>
    
    <style name="CardViewStyle" parent="android:Widget">
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingLeft">@dimen/padding</item>
    </style>
</resources>
